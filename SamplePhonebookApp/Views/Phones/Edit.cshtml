@model SamplePhonebookApp.Models.DTOs.PhoneDto
@{
    ViewBag.Title = "Редактирование Phone";
}
<form asp-action="Edit" asp-controller="Phones">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Id" class="control-label">Код</label>
        <input type="number" asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">ФИО</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Telephone" class="control-label">Номер телефона</label>
        <input type="text" asp-for="Telephone" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="Address" class="control-label">Адрес</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Код категория</label>
        <input type="number" asp-for="CategoryId" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>
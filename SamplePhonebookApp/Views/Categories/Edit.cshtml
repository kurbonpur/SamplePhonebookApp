@model SamplePhonebookApp.Models.DTOs.CategoryDto
@{
    ViewBag.Title = "Редактирование категорий";
}
<form asp-action="Edit" asp-controller="Categories">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Id" class="control-label">Код</label>
        <input type="number" asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>
@model SamplePhonebookApp.Models.DTOs.CategoryDto
@{
    ViewBag.Title = "Добавление категория";
}
<form asp-action="Create" asp-controller="Categories">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>    
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-outline-secondary" />
    </div>
</form>